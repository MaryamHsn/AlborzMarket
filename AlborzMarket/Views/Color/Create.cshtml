
@using Alborz.DomainLayer.Enumration;
@model Alborz.DomainLayer.DTO.ColorDTO

@{
    ViewBag.Title = "ثبت محصول";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Styles.Render("~/css/stylesheets/main.css"); 
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-horizontal">

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">  رنگ محصولات</h1>
            </div>
        </div>

        @*<button type="button" onclick="location.href='@Url.Action("create","Property")';return false;" class="btn btn-success">ثبت ویژگی</button>*@

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">ثبت  رنگ محصول</div>
                    <div class="panel-body">
                        <div class="col-md-6">
                            <form role="form">
                                <div class="form-group">
                                    <p class="control-label col-md-5">عنوان :</p>
                                    <div class="col-md-7">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                </div> 
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">دکمه ثبت </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>
