@using Alborz.DomainLayer.Enumration;
@model  Alborz.DomainLayer.DTO.ProductDetailDTO

@{

    ViewBag.Title = "ثبت محصول";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Styles.Render("~/css/stylesheets/main.css");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductId)

    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">  ثبت رنگ و تعداد</h1>
                </div>
            </div>

            @*<button type="button" onclick="location.href='@Url.Action("create","Property")';return false;" class="btn btn-success">ثبت ویژگی</button>*@
            <!--  ==========  -->
            <!--  = Steps =  -->
            <!--  ==========  -->
            <div class="checkout-steps">
                <div class="clearfix">
                    <div class="step done ">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        @*<a href="checkout-step-1.html">ثبت محصول </a>*@
                        <a onclick="location.href='@Url.Action("Edit","Product", new { id = Model.ProductId,returnController="ProductDetail",returnAction="create"})';return false;">ثبت محصول </a>

                    </div>
                    <div class="step active">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        ثبت رنگ و تعداد
                    </div>
                    <div class="step">
                        <div class="step-badge">3</div>
                        ثبت ویژگی
                    </div>
                    <div class="step">
                        <div class="step-badge">4</div>
                        ثبت تصویر
                    </div>
                </div>
            </div>
            <!-- /steps -->
            <!--  ==========  -->
            <!--  = Shipping addr form =  -->
            <!--  ==========  -->
            <!--  ==========  -->
            <!--  = for content =  -->
            <!--  ==========  -->
        </fieldset>
        <fieldset>
        
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">ثبت رنگ و تعداد</div>
                            <div class="panel-body">
                                    <div class="col-md-6">
                                        <form role="form">
                                            <input type="button" value="+" id="addAnother" onclick="call()">
                                   
                                            <table id="movieEditor" style="list-style-type: none" >
                                                    @foreach (var item in Model.ProductDetails)
                                                    {
                                                        @Html.Partial("ProductDetailsEntry", item)
                                                        
                                                    } 
                                                </table>
                                        </form>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!--  ==========  -->
                <!--  = /for content =  -->
                <!--  ==========  -->
            </fieldset>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">دکمه ثبت </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>
<script type="text/javascript">
    function call() {
        $.get('/ProductDetail/ProductDetailsEntry', function (template) {
            $("#movieEditor").append(template);
        });
    }
</script>