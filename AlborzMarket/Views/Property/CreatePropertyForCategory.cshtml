@using Alborz.DomainLayer.Enumration;
@model  Alborz.DomainLayer.DTO.PropertyDTO

@{

    ViewBag.Title = "ثبت ویژگی محصول";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Styles.Render("~/css/stylesheets/main.css");
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ProductId)
    @Html.HiddenFor(model => model.CategoryId)

    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">  ثبت ویژگی</h1>
                </div>
            </div>

            @*<button type="button" onclick="location.href='@Url.Action("create","Property")';return false;" class="btn btn-success">ثبت ویژگی</button>*@
            <!--  ==========  -->
            <!--  = Steps =  -->
            <!--  ==========  -->
            <div class="checkout-steps">
                <div class="clearfix">
                    <div class="step done ">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        <a onclick="location.href='@Url.Action("Edit","Product", new { id = Model.ProductId})';return false;">ثبت محصول </a>

                    </div>
                    <div class="step done">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        <a onclick="location.href='@Url.Action("Edit","ProductDetail", new { id = Model.ProductId})';return false;"> ثبت رنگ و تعداد </a>

                    </div>
                    <div class="step active">
                        <div class="step-badge">3</div>
                        ثبت ویژگی
                    </div>
                    <div class="step">
                        <div class="step-badge">4</div>
                        ثبت تصویر
                    </div>
                </div>
            </div>
            <!-- /steps -->
            <!--  ==========  -->
            <!--  = Shipping addr form =  -->
            <!--  ==========  -->
            <!--  ==========  -->
            <!--  = for content =  -->
            <!--  ==========  -->
        </fieldset>
        <fieldset>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">ثبت ویژگی</div>
                        <div class="panel-body">
                            <div class="col-md-6">
                                <form role="form">
                                    <div class="form-group">
                                        <p class="control-label col-md-5">عنوان :</p>
                                        <div class="col-md-7">
                                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <p class="control-label col-md-5">مقدار :</p>
                                        <div class="col-md-7">
                                            @Html.EditorFor(model => model.Value, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Value, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--  ==========  -->
            <!--  = /for content =  -->
            <!--  ==========  -->
        </fieldset>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">دکمه ثبت </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>

<script type="text/javascript">
    function call() {
        $.get('/File/FileUploadEntry', function (template) {
            $("#movieEditor").append(template);
        });
    }
</script>