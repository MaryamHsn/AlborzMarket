@model  Alborz.DomainLayer.DTO.FileDTO
@{

    ViewBag.Title = "آپلود تصویر";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    @Styles.Render("~/css/stylesheets/main.css");
}

@*@using (Html.BeginForm())*@
@using (Html.BeginForm("CreateForProduct", "File", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EntityEnumId)
    @Html.HiddenFor(model => model.EntityKeyId)

    <div class="form-horizontal">
        <fieldset>
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">آپلود تصویر</h1>
                </div>
            </div>

            @*<button type="button" onclick="location.href='@Url.Action("create","Property")';return false;" class="btn btn-success">ثبت ویژگی</button>*@
            <!--  ==========  -->
            <!--  = Steps =  -->
            <!--  ==========  -->
            <div class="checkout-steps">
                <div class="clearfix">
                    <div class="step done ">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        <a onclick="location.href='@Url.Action("Edit","Product", new {id = Model.ProductId,returnController="File",returnAction="CreateForProduct"})';return false;">ثبت محصول </a>

                    </div>
                    <div class="step done">
                        <div class="step-badge"><i class="icon-ok"></i></div>
                        <a onclick="location.href='@Url.Action("EditAll","ProductDetail", new { id = Model.ProductId,returnController="File",returnAction="CreateForProduct"})';return false;">ثبت رنگ و تعداد </a>

                    </div>
                    <div class="step done">
                        <div class="step-badge">3</div>
                        <a onclick="location.href='@Url.Action("EditAll","Property", new { id = Model.ProductId,returnController="File",returnAction="CreateForProduct"})';return false;">ثبت ویژگی </a>

                    </div>
                    <div class="step active">
                        <div class="step-badge">4</div>
                        ثبت تصویر
                    </div>
                </div>
            </div>
            <!-- /steps -->
            <!--  ==========  -->
            <!--  = Shipping addr form =  -->
            <!--  ==========  -->
            <!--  ==========  -->
            <!--  = for content =  -->
            <!--  ==========  -->
        </fieldset>
        <fieldset>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">آپلود تصویر</div>
                        <div class="panel-body">
                            <div class="col-md-6">
                                <form role="form">
                                    @*<input type="button" value="+" id="addAnother" onclick="call()">
                                        <div id="content">
                                        </div>
                                        <table id="showList">
                                            <tr id="movieEditor" style="list-style-type: none">
                                                @foreach (var item in Model.Files)
                                                {
                                                    @Html.Partial("FileUploadEntry", item)
                                                }
                                            </tr>

                                        </table>*@
                                    @Html.LabelFor(model => model.Files, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.Files, "", new { @type = "file", @multiple = "multiple" })
                                        @Html.ValidationMessageFor(model => model.Files, "", new { @class = "text-danger" })
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--  ==========  -->
            <!--  = /for content =  -->
            <!--  ==========  -->
        </fieldset>

        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">دکمه ثبت </button>
        </div>
    </div>
}

<div>
    @Html.ActionLink("بازگشت به لیست", "Index")
</div>


<script type="text/javascript">
    function call() {
        $.get('/File/FileUploadEntry', function (template) {
            $("#movieEditor").append(template);
        });
    }
</script>